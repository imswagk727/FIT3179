{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "AU State Monthly Temperature"
    },
    "description": "hello im description.",
    "data": {
        "url": "https://raw.githubusercontent.com/imswagk727/FIT3179/main/Asgmt2/project/data/temp.csv"
    },
    "params": [
        {
            "name": "state_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "VIC",
                    "NSW",
                    "QLD"
                ],
                "labels": [
                    "select a state",
                    "VIC",
                    "NSW",
                    "QLD"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.state == state_selection"
        }
    ],
    "encoding": {
        "x": {
            "field": "Month",
            "type": "nominal",
            "axis": {
                "domain": false,
                "ticks": false,
                "labelAngle": 0,
                "labelPadding": 4
            },
            "sort": [
                "1",
                "2",
                "3"
            ]
        },
        "y": {
            "field": "min",
            "type": "quantitative"
        },
        "y2": {
            "field": "max"
        },
        "tooltip": [
            {
                "field": "Month",
                "type": "nominal"
            },
            {
                "field": "max",
                "type": "quantitative",
                "format": ","
            },
            {
                "field": "min",
                "type": "quantitative",
                "format": ","
            }
        ]
    },
    "layer": [
        {
            "mark": "line",
            "encoding": {
                "detail": {
                    "field": "month",
                    "type": "nominal"
                },
                "color": {
                    "value": "#db646f"
                }
            }
        },
        {
            "mark": {
                "type": "point",
                "filled": true
            },
            "encoding": {
                "color": {
                    "field": "min",
                    "type": "ordinal",
                    "scale": {
                        "domain": [0, 30],
                        "range": ["#e6959c", "#911a24"]
                      },
                    "title": "Min and Max"
                },
                "size": {
                    "value": 100
                },
                "opacity": {
                    "value": 1
                }
            }
        }
    ]
}