{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Monthly Temperature in celsius Â°C"
  },
  "description": "hello im description.",
  "data": {
    "url": "https://raw.githubusercontent.com/imswagk727/FIT3179/main/Asgmt2/project/data/temp_us.csv"
  },
  "width": {"step": 28, "for": "position"},
  "params": [
    {
      "name": "state_selection",
      "value": "California",
      "bind": {
        "input": "select",
        "options": [
          "Alaska",
          "California",
          "Connecticut",
          "Florida",
          "Hawaii",
          "Illinois",
          "Massachusetts",
          "Michigan",
          "Nevada",
          "New York"
        ],
        "labels": [
          "Alaska",
          "California",
          "Connecticut",
          "Florida",
          "Hawaii",
          "Illinois",
          "Massachusetts",
          "Michigan",
          "Nevada",
          "New York"
        ],
        "name": "State Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.state == state_selection"
    },
    {
      "calculate": "(datum.min-32) * 5 / 9",
      "as": "celsius_low"
    },
    {
      "calculate": "(datum.max-32) * 5 / 9",
      "as": "celsius_high"
    }
  ],
  "encoding": {
    "x": {
      "title": "Month",
      "field": "Month",
      "type": "nominal",
      "axis": {
        "domain": false,
        "ticks": false,
        "labelAngle": 0,
        "labelPadding": 4
      },
      "sort": [
        "1",
        "2",
        "3"
      ]
    },
    "y": {
      "field": "celsius_low",
      "type": "quantitative",
      "scale": {
        "domain": [
          -20,
          40
        ]
      },
      "axis": {
        "gridColor": {
          "condition": {
            "test": "datum.value === 0",
            "value": "black"
          },
          "value": "#ddd"
        }
      }
    },
    "y2": {
      "field": "celsius_high",
      "title":"Low and High temperatures"
    },
    "tooltip": [
      {
        "field": "Month",
        "type": "nominal"
      },
      {
        "field": "celsius_high",
        "title": "High",
        "type": "quantitative",
        "format": ".1f"
      },
      {
        "field": "celsius_low",
        "title": "Low",
        "type": "quantitative",
        "format": ".1f"
      }
    ]
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
          "color": {"value": "black"}
      }
      
    },
    {
      "mark": {"type": "point","filled": true},
      "encoding": {
          "y": {
              "field": "celsius_low"
          },
          "color": {"value": "black"}
      }
    },
    {
      "mark": {"type": "point","filled": true},
      "encoding": {
          "y": {
              "field": "celsius_high"
          },
          "color": {"value": "black"}
      }
    }
  ]
}